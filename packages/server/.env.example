# Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
CLIENT_URL=http://localhost:3000

# Airtable Configuration
AIRTABLE_PERSONAL_ACCESS_TOKEN=your_airtable_personal_access_token_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_USERS_TABLE=Users

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET=your_s3_bucket_name

# Google Drive Integration
GOOGLE_DRIVE_CREDENTIALS_JSON=your_google_service_account_credentials_json
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# YouTube API Configuration
# Get API key from: https://console.cloud.google.com/
# Enable YouTube Data API v3 for your project
YOUTUBE_API_KEY=your_youtube_api_key_here
# Option 1: Use a specific channel ID to fetch all videos from that channel
YOUTUBE_CHANNEL_ID=your_youtube_channel_id_here
# Option 2: Use a search query to find videos by keyword (e.g., "tax preparation tutorial")
# YOUTUBE_SEARCH_QUERY=tax preparation training

# Production URLs (update for your domain)
# CLIENT_URL=https://your-app.onrender.com
