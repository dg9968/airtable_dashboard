{
  "name": "airtable-dashboard",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "cd packages/client && bun run dev",
    "dev:client": "cd packages/client && bun run dev",
    "dev:server": "cd packages/server && bun run dev",
    "dev:all": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "build": "cd packages/client && bun run build && cd ../server && bun run build",
    "build:client": "cd packages/client && bun run build",
    "build:server": "cd packages/server && bun run build",
    "start": "cd packages/client && bun run start",
    "lint": "cd packages/client && bun run lint && cd ../server && bun run lint",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/.next packages/*/dist bun.lockb"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5",
    "concurrently": "^8.2.2"
  }
}
